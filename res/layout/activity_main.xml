<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/actionModeBackground"
    android:orientation="vertical"
    android:weightSum="1">


  <TextView
      android:text="TICKET ANALYSE"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/textView"
      android:textSize="20sp"
      android:textAlignment="center" />

  <TextView
    android:text="Start"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/textView5"
    android:textStyle="normal|italic" />

  <EditText android:id="@+id/start"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/start"
    android:text="Frankfurt (Hbf)"
    tools:layout_width="match_parent" />

  <TextView
    android:text="Ziel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/textView6"
    android:textStyle="normal|italic" />

  <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:hint="Enter END"
    android:ems="10"
    android:id="@+id/end"
    android:text="Berlin (Hbf)" />

  <TextView
    android:text="ICE Nummer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/textView7"
    android:textStyle="normal|italic" />

  <EditText android:id="@+id/ice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/end"
    android:text="ICE 596" />

  <TextView
    android:text="Abfahrtszeit + Datum"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/textView8"
    android:textStyle="normal|italic" />

  <EditText android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter TIME"
      android:text="16:12" />

    <EditText android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter DATE"
      android:text="02.04.2017" />

  <Space
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.17" />

  <CheckBox
    android:text="Museen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/checkBox" />

  <CheckBox
    android:text="Schlösser"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/checkBox2"
    android:checked="true" />

  <CheckBox
    android:text="Parks / Denkmäler"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/checkBox3"
    android:checked="true" />

  <CheckBox
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/checkBox5"
    android:text="Sportanlagen" />

  <Space
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/button_send"
      android:onClick="getPoi" />

  <Button
    android:text="Hotels und Restaurants nahe des Zieles"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/button2"
    android:onClick="getPoiForDestination"/>

</LinearLayout>
